/* Substance Selector Styles */
.substance-selector-section {
  margin: 3rem 0;
  padding: 2rem;
  background: linear-gradient(135deg, #1a0000 0%, #2d0000 100%);
  border-radius: 1rem;
  border: 1px solid #660000;
}

.substance-selector-section h2 {
  color: #ff6666;
  text-align: center;
  margin-bottom: 1rem;
}

.substance-selector-section p {
  color: #cccccc;
  text-align: center;
  margin-bottom: 2rem;
}

.category-tabs {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.tab-btn {
  background: linear-gradient(135deg, #330000 0%, #1a0000 100%);
  color: #cccccc;
  border: 1px solid #660000;
  padding: 0.8rem 1.5rem;
  border-radius: 2rem;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  white-space: nowrap;
}

.tab-btn:hover {
  background: linear-gradient(135deg, #660000 0%, #330000 100%);
  color: #ff9999;
  transform: translateY(-1px);
}

.tab-btn.active {
  background: linear-gradient(135deg, #ff3333 0%, #cc0000 100%);
  color: white;
  border-color: #ff3333;
  box-shadow: 0 4px 8px rgba(255, 51, 51, 0.3);
}

.substance-selector-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}

.substance-selector-card {
  background: linear-gradient(135deg, #2d0000 0%, #1a0000 100%);
  border: 1px solid #660000;
  border-radius: 1rem;
  padding: 1.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.substance-selector-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 51, 51, 0.05) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.substance-selector-card:hover {
  transform: translateY(-4px);
  border-color: #ff3333;
  box-shadow: 0 8px 16px rgba(255, 51, 51, 0.2);
}

.substance-selector-card:hover::before {
  opacity: 1;
}

.substance-icon {
  font-size: 2.5rem;
  text-align: center;
  margin-bottom: 1rem;
}

.substance-selector-card h3 {
  color: #ff9999;
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  text-align: center;
}

.substance-selector-card p {
  color: #cccccc;
  font-size: 0.9rem;
  text-align: center;
  margin-bottom: 1rem;
  line-height: 1.4;
}

.quick-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 1rem;
  border-top: 1px solid #330000;
}

.price-preview {
  color: #ff6666;
  font-weight: 600;
  font-size: 0.9rem;
}

.trend-preview {
  font-size: 0.8rem;
  padding: 0.3rem 0.6rem;
  border-radius: 1rem;
  font-weight: 600;
}

.trend-up {
  background: linear-gradient(135deg, #ff3333, #cc0000);
  color: white;
}

.trend-stable {
  background: linear-gradient(135deg, #ff9900, #cc7700);
  color: white;
}

.trend-down {
  background: linear-gradient(135deg, #66ff66, #33cc33);
  color: #000;
}

