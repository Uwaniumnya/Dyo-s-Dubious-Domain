/* //////////////////////
  Search Functionality
  /////////////////////// */

.search-container {
  position: relative;
  width: 100%;
  max-width: 600px;
  margin: 1.5rem auto 0;
  padding: 0 1rem;
}

.search-input {
  width: 100%;
  padding: 1rem 1.25rem;
  border: 2px solid #ff0000;
  border-radius: 0.5rem;
  font-size: var(--fs-500);
  background: #000000;
  color: #ff0000;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: #ff3333;
  box-shadow: 0 0 0 3px rgba(255, 0, 0, 0.2);
}

.search-input::placeholder {
  color: #ff6666;
  font-style: italic;
}

/* Sort Controls */
.sort-controls {
  margin: 2rem 0;
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.sort-controls label {
  font-size: var(--fs-400);
  color: #ff0000;
  font-weight: var(--fw-700);
}

.sort-controls select {
  padding: 0.5rem 1rem;
  border: 2px solid #ff0000;
  border-radius: 0.25rem;
  background: #000000;
  color: #ff0000;
  font-size: var(--fs-400);
  cursor: pointer;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.sort-controls select:focus {
  outline: none;
  border-color: #ff3333;
  box-shadow: 0 0 0 3px rgba(255, 0, 0, 0.2);
}

.sort-controls select:hover {
  border-color: #ff3333;
}

.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #000000;
  border: 2px solid #ff0000;
  border-top: none;
  border-radius: 0 0 0.5rem 0.5rem;
  box-shadow: 0 4px 12px rgba(255, 0, 0, 0.3);
  max-height: 500px;
  overflow-y: auto;
  z-index: 1000;
}

