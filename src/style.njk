.journey-map-container {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
  border-radius: 12px;
  padding: 0;
  margin: 1rem 0;
  position: relative;
  overflow: hidden;
  min-height: 600px;
}

.journey-map-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(120, 119, 198, 0.2) 0%, transparent 50%);
  pointer-events: none;
}

.journey-map {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 400px;
}

.journey-node {
  position: absolute;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 
    0 4px 15px rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.2);
  transform-origin: center;
  z-index: 2;
  backdrop-filter: blur(2px);
}

.journey-node.highlighted {
  transform: scale(1.15);
  box-shadow: 
    0 8px 25px rgba(0, 0, 0, 0.4),
    0 0 0 3px rgba(255, 255, 255, 0.4),
    inset 0 2px 0 rgba(255, 255, 255, 0.3);
  z-index: 50;
}

.journey-node.highlighted .node-tooltip {
  z-index: 150;
}

/* Keep all nodes as circles for consistency */
.journey-node.circle {
  border-radius: 50%;
}

.node-emoji {
  font-size: 1.5rem;
  z-index: 3;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.node-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border: 2px solid;
  border-color: inherit;
  opacity: 0.6;
  animation: pulse 2s ease-in-out infinite;
  z-index: -1;
}

@keyframes pulse {
  0% { 
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.6;
  }
  50% { 
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0.2;
  }
  100% { 
    transform: translate(-50%, -50%) scale(1.6);
    opacity: 0;
  }
}

.node-tooltip {
  position: absolute;
  bottom: calc(100% + 15px);
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.95);
  color: white;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  font-size: 0.85rem;
  line-height: 1.4;
  opacity: 0;
  transition: all 0.3s ease;
  pointer-events: none;
  z-index: 100;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
  min-width: 140px;
  text-align: center;
}

.node-tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border: 8px solid transparent;
  border-top-color: rgba(0, 0, 0, 0.95);
}

/* Adjust tooltip position for nodes near edges */
.journey-node[style*="left: 20%"] .node-tooltip,
.journey-node[style*="left: 15%"] .node-tooltip {
  left: 0;
  transform: translateX(0);
}

.journey-node[style*="left: 80%"] .node-tooltip,
.journey-node[style*="left: 75%"] .node-tooltip {
  left: auto;
  right: 0;
  transform: translateX(0);
}

.journey-node[style*="left: 20%"] .node-tooltip::after,
.journey-node[style*="left: 15%"] .node-tooltip::after {
  left: 20px;
  transform: translateX(0);
}

.journey-node[style*="left: 80%"] .node-tooltip::after,
.journey-node[style*="left: 75%"] .node-tooltip::after {
  left: auto;
  right: 20px;
  transform: translateX(0);
}

.journey-connection {
